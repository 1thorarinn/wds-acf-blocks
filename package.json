{
	"name": "wds_acf_blocks",
	"version": "1.0.0",
	"description": "A set of custom Gutenberg blocks built with Advanced Custom Fields Pro.",
	"author": "WebDevStudios",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WebDevStudios/wds-acf-blocks.git"
	},
	"keywords": [
		"plugin"
	],
	"bugs": {
		"url": "https://github.com/WebDevStudios/wds-acf-blocks/issues"
	},
	"homepage": "https://github.com/WebDevStudios/wds-acf-blocks#readme",
	"main": "src/js/app.js",
	"dependencies": {
		"slick-carousel": "^1.8.1"
	},
	"devDependencies": {
		"@webdevstudios/js-coding-standards": "~1.1.1",
		"autoprefixer": "^9.8.6",
		"browser-sync": "^2.26.12",
		"cssnano": "^4.1.10",
		"imagemin-cli": "^6.0.0",
		"mkdirp": "^1.0.4",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.0.2",
		"postcss-cli": "^7.1.2",
		"rimraf": "^3.0.2",
		"stylelint": "^13.7.0",
		"stylelint-config-wordpress": "^17.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.18.0",
		"svgo": "^1.3.2",
		"svgstore-cli": "^2.0.0",
		"uglify-es": "^3.3.9",
		"wp-pot-cli": "^1.5.0"
	},
	"scripts": {
		"clean": "rimraf dist/{css/*,js/*,images/*,languages/*}",
		"optimizecss": "postcss dist/css/style.css -c postcss.config.js -o dist/css/style.css | postcss dist/css/editor.css -c postcss.config.js -o dist/css/editor.css",
		"scss": "node-sass src/scss/style.scss -o dist/css",
		"preview": "node-sass src/scss/editor.scss -o dist/css",
		"lint": "npm run lint-js && npm run lint-scss",
		"lint:js": "npm run lint-js",
		"lint:scss": "npm run lint-scss",
		"lint-js": "./node_modules/.bin/eslint src/js/concat/**/*.js || true",
		"lint-scss": "./node_modules/.bin/stylelint src/scss/**/*.scss --syntax scss --config .stylelintrc || true",
		"uglify": "mkdirp dist/js -p && uglifyjs src/js/concat/*.js -m -o dist/js/app.js && uglifyjs src/js/concat/*.js -m -c -o dist/js/app.min.js",
		"polyfill": "uglifyjs src/js/babel-polyfill.min.js -m -o dist/js/babel-polyfill.js && uglifyjs src/js/babel-polyfill.min.js -m -c -o dist/js/babel-polyfill.min.js",
		"imagemin": "imagemin src/images/*.* --out-dir=dist/images/",
		"icons": "svgo -f src/images/icons -o dist/images/icons && svgstore dist/images/icons/*.svg --inline -o dist/images/icons/sprite.svg",
		"pot": "mkdirp dist/languages && wp-pot --src './**/*.php' --dest-file 'dist/languages/wds-acf-blocks.pot'",
		"lint:php": "phpcs -p -s -n . --standard=phpcs.xml.dist --extensions=php || true || exit",
		"php": "npm run lint:php",
		"serve": "browser-sync start --https --proxy 'https://testing.test' --no-open --files \"dist/css/*.css, dist/js/*.js, **/*.html, **/*.php, !node_modules/**/*.html\"",
		"build:css": "run-s lint-scss scss preview optimizecss",
		"build:js": "run-s lint uglify polyfill",
		"build:images": "run-s imagemin icons",
		"build:pot": "run-s pot",
		"build": "run-s clean build:*",
		"watch:css": "onchange \"src/scss\" -- run-s build:css",
		"watch:js": "onchange \"src/js\" -- run-s build:js",
		"watch:images": "onchange \"src/images\" -- run-s build:images",
		"watch:php": "onchange './*.php', './**/*.php' -- run-s php",
		"watch": "run-p serve watch:*",
		"postinstall": "composer install && run-s build"
	},
	"browserslist": [
		"defaults"
	],
	"eslintConfig": {
		"extends": [
			"plugin:@wordpress/eslint-plugin/esnext",
			"plugin:@wordpress/eslint-plugin/react",
			"@webdevstudios/js-coding-standards"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-wordpress",
		"plugins": [
			"stylelint-scss"
		],
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"extend",
						"at-root",
						"debug",
						"warn",
						"error",
						"if",
						"else",
						"for",
						"each",
						"while",
						"mixin",
						"include",
						"content",
						"return",
						"function"
					]
				}
			]
		}
	}
}
